# --- Shared (dev) ---
# NOTE: Copy to `.env` (root) for docker compose variable substitution (optional).
# Supabase config is in supabase/.env

# Used by Better Auth (must be >= 32 chars).
BETTER_AUTH_SECRET=dev_secret_please_change_me_32_chars_minimum
# Base URL for Better Auth (callbacks, redirects)
BETTER_AUTH_URL=http://localhost:3000

# Go API
API_PORT=8080
# PostgreSQL (Supabase) - direct connection via port 54322 (bypasses pooler)
# IMPORTANTE: search_path=flip obrigatorio apos migration 0012
DATABASE_URL="postgres://postgres:your_postgres_password@localhost:54322/postgres?sslmode=disable&options=-c%20search_path%3Dflip"
BETTER_AUTH_JWKS_URL=http://localhost:3000/api/auth/jwks

# Web (Next.js)
GO_API_BASE_URL=http://localhost:8080

# Storage (Supabase S3-compatible) - porta 8000 via Kong
S3_ENDPOINT=http://localhost:8100/s3
S3_ACCESS_KEY=your_s3_protocol_access_key_id
S3_SECRET_KEY=your_s3_protocol_access_key_secret
S3_BUCKET=documents
S3_REGION=stub
S3_FORCE_PATH_STYLE=true
STORAGE_PROVIDER=supabase

# Supabase Keys (copy from supabase/.env after generating)
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Firecrawl (web scraping com stealth mode)
# Obter em: https://www.firecrawl.dev/
FIRECRAWL_API_KEY=fc-xxxxxxxxxxxxxxxxxxxxxxxx

# OpenRouter (LLM para extracao de dados e Flip Score)
# Obter em: https://openrouter.ai/
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxx
# Optional: model override (default: anthropic/claude-haiku-4.5)
# OPENROUTER_MODEL=anthropic/claude-haiku-4.5

# M10 - Stripe Billing
# Obter em: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Stripe Price IDs (criar Products/Prices no Stripe Dashboard)
STRIPE_PRICE_ID_STARTER=price_starter_xxx
STRIPE_PRICE_ID_PRO=price_pro_xxx
STRIPE_PRICE_ID_GROWTH=price_growth_xxx

# Internal API Secret (protege endpoints internos webhook -> Go API)
INTERNAL_API_SECRET=internal_secret_please_change_me_32_chars

# Resend (email verification)
# Obter em: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@seudominio.com
