{
  "name": "widia-flip",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "db:up": "bash scripts/db-up.sh",
    "db:down": "bash scripts/db-down.sh",
    "db:migrate": "bash scripts/apply-migrations.sh",
    "db:repair": "bash scripts/db-repair.sh",
    "db:legacy:up": "docker compose -f docker-compose.legacy.yml up -d db",
    "db:legacy:down": "docker compose -f docker-compose.legacy.yml down -v",
    "dev:web": "npm -w apps/web run dev",
    "build:web": "npm -w apps/web run build",
    "lint:web": "npm -w apps/web run lint",
    "typecheck:web": "npm -w apps/web run typecheck",
    "dev:api": "bash scripts/dev-api.sh",
    "fmt:api": "cd services/api && gofmt -w ."
  },
  "devDependencies": {
    "marked": "^17.0.1",
    "puppeteer": "^24.36.1"
  }
}
